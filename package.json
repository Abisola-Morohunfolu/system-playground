{
  "name": "system-playground",
  "private": true,
  "packageManager": "yarn@4.6.0",
  "engines": {
    "node": ">=20.11.0",
    "yarn": ">=4.6.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "typecheck": "lerna run typecheck --stream",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "dev:web": "yarn workspace @system-playground/web dev",
    "clean": "lerna run clean --stream",
    "changeset": "changeset",
    "version:packages": "changeset version",
    "release": "changeset publish",
    "release:dry-run": "changeset publish --dry-run",
    "validate": "yarn lint && yarn typecheck && yarn test && yarn build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@types/node": "^22.13.1",
    "eslint": "^9.19.0",
    "lerna": "^8.1.9",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
