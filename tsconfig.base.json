{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@system-playground/engine": [
        "packages/engine/src/index.ts"
      ],
      "@system-playground/simulations": [
        "packages/simulations/src/index.ts"
      ],
      "@system-playground/ui": [
        "packages/ui/src/index.ts"
      ],
      "@system-playground/shared": [
        "packages/shared/src/index.ts"
      ]
    }
  }
}
